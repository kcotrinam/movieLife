<div class="card-container">
  <% @articles.each do |art| %>
    <article class="card">
      <%= image_tag(url_for(art.avatar), class: 'card__image') %>
      <div class="card__info">
        <h2 class="card__title">
          <%= @category.name%>
        </h2>
        <div class="card__subtitle">
          <%= art.title %>
        </div>
        <div>
          <p class="card__content">
            <%= card_content(art.content) %>
          </p>
          <%= link_to 'Read more', article_path(art.id), class: 'card__read-more' %>
        </div>
        <%= vote_unvote(art) %>
      </div>
    </article>
  <% end %>
</div>
